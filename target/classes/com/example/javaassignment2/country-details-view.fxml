   <children>
      <BorderPane id="background" layoutX="36.0" layoutY="14.0" prefHeight="468.0" prefWidth="629.0">
         <center>
            <GridPane id="label" prefHeight="400.0" prefWidth="568.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="310.5" minWidth="10.0" prefWidth="295.5" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="335.0" minWidth="10.0" prefWidth="333.5" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Country Name" />
                  <Label fx:id="countryNameLabel" text="Label" GridPane.columnIndex="1" />
                  <Label text="Population" GridPane.rowIndex="1" />
                  <Label text="Ranking" GridPane.rowIndex="2" />
                  <Label text="World Share" GridPane.rowIndex="3" />
                  <Label fx:id="populationLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label fx:id="rankingLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label fx:id="worldShareLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
         </center>
         <bottom>
            <Button id="button" fx:id="returnToCountries" mnemonicParsing="false" onAction="#returnToCountries" text="List Countries" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
